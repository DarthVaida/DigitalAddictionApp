<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1" android:baselineAligned="false"
             android:orientation="vertical"
             android:background="#ff2a2a2a">
    <TextView
            android:id="@+id/myText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textSize="40sp" android:layout_marginTop="60dp"
            android:layout_marginBottom="0dp" android:gravity="center" android:layout_gravity="center_vertical"
            android:layout_column="0" android:layout_row="0" android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp" android:layout_alignParentTop="true" android:textColor="#ffffffff"
            />
    <Button
            android:layout_width="200dp"
            android:layout_height="170dp"
            android:id="@+id/button"
            android:onClick="randomButton" android:layout_row="1" android:layout_column="0"
            android:background="@drawable/random_button"
            android:layout_alignBaseline="@+id/button2" android:layout_alignBottom="@+id/button2"
            android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="200dp"
            android:layout_height="170dp"
            android:id="@+id/button2"
            android:background="@drawable/average_button"
            android:layout_below="@+id/myText" android:layout_toEndOf="@+id/button"
            android:layout_alignStart="@+id/button4" android:onClick="averageButton"/>
    <Button
            android:layout_width="200dp"
            android:layout_height="170dp"
            android:id="@+id/button3"
            android:background="@drawable/profile_button"
            android:layout_below="@+id/button" android:layout_alignParentStart="true" android:onClick="profileButton"/>
    <Button
            android:layout_width="200dp"
            android:layout_height="170dp"
            android:id="@+id/button4"
            android:background="@drawable/information_button"
            android:layout_below="@+id/button" android:layout_alignParentEnd="true"
            android:onClick="informationButton"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Random"
            android:id="@+id/textView"
            android:textColor="#ffffffff"
            android:layout_centerVertical="true" android:layout_alignParentStart="true"
            android:layout_marginLeft="72dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium" android:text="Average"
              android:id="@+id/textView2" android:textColor="#ffffffff"
              android:layout_alignTop="@+id/textView" android:layout_alignParentEnd="true"
              android:layout_marginRight="63dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium" android:text="Information"
              android:id="@+id/textView4" android:textColor="#ffffffff"
              android:layout_marginRight="50dp"
              android:layout_alignBottom="@+id/button4" android:layout_alignParentEnd="true"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium" android:text="Profile"
              android:id="@+id/textView3" android:textColor="#ffffffff"
              android:layout_marginLeft="78dp"
              android:layout_alignBottom="@+id/button3" android:layout_alignParentStart="true"/>
</RelativeLayout>



